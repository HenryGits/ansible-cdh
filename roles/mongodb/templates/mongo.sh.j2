#!/bin/bash

#chkconfig:35 95 1
#description:script to start/stop mongo

##############################################

start() {
        echo -n "Starting mongo: "
        {{cdh_all_app_path}}/mongodb/bin/mongod --config {{cdh_all_app_path}}/mongodb/mongodb.conf
        echo "mongo start ok."
}
stop() {
        echo -n "Shutting down mongo: "
        {{cdh_all_app_path}}/mongodb/bin/mongod --shutdown --config {{cdh_all_app_path}}/mongodb/mongodb.conf
        echo "mongo stop ok."
}

# See how we were called
sleep 10;

case "$1" in
  start)
        start
        ;;
  stop)
        stop
        ;;
  restart)
        stop
        sleep 10
        start
        ;;
  *)
        echo "Usage: $0 {start|stop|restart}"
esac

exit 0