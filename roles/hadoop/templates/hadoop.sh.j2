#!/bin/bash

#chkconfig:35 95 1
#description:script to start/stop hadoop

##############################################

start() {
        echo -n "Starting hadoop: "
        #sh {{cdh_all_app_path}}/hadoop/sbin/mr-jobhistory-daemon.sh start historyserver
        #sh {{cdh_all_app_path}}/hadoop/sbin/hadoop-daemon.sh start journalnode
        sh {{cdh_all_app_path}}/hadoop/sbin/start-all.sh
        echo "hadoop start ok."
}
stop() {
        echo -n "Shutting down hadoop: "
        #sh {{cdh_all_app_path}}/hadoop/sbin/mr-jobhistory-daemon.sh stop historyserver
        #sh {{cdh_all_app_path}}/hadoop/sbin/hadoop-daemon.sh stop journalnode
        sh {{cdh_all_app_path}}/hadoop/sbin/stop-all.sh
        echo "hadoop stop ok."
}

#集群连通性校验
{% for host in groups["DataNodes"] %}
ping {{ hostvars[host]["ansible_ssh_host"] }} -c1 >/dev/null 2>&1
    if [ $? -ne 0 ];
    then
        echo "Waiting for ping {{ hostvars[host]["ansible_ssh_host"] }} ..."
        startTime=$(date +%s)
        while true;
        do
            sleep 1
            ping {{ hostvars[host]["ansible_ssh_host"] }} -c1 >/dev/null 2>&1
            if [ $? -eq 0 ]; then
                break
            fi
            if [ "$(($(date +%s)-startTime))" -gt "{{ping_time}}" ]; then
                echo "connect {{ hostvars[host]["ansible_ssh_host"] }} timeout !!!"
                #超时不自启动集群
                exit
            fi
        done
    fi
{% endfor %}

# See how we were called
case "$1" in
  start)
        start
        ;;
  stop)
        stop
        ;;
  restart)
        stop
        sleep 10
        start
        ;;
  *)
        echo "Usage: $0 {start|stop|restart}"
esac

exit 0