#!/bin/bash

#chkconfig:35 95 1
#description:script to start/stop presto

##############################################

start() {
        echo -n "Starting presto: "
        {{presto_directory}}/presto/bin/launcher.py start
        echo "presto start ok."
}
stop() {
        echo -n "Shutting down presto: "
        {{presto_directory}}/presto/bin/launcher.py stop
        echo "presto stop ok."
}


# See how we were called

case "$1" in
  start)
        start
        ;;
  stop)
        stop
        ;;
  restart)
        stop
        sleep 5
        start
        ;;
  *)
        echo "Usage: $0 {start|stop|restart}"
esac

exit 0