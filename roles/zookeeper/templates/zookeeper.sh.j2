#!/bin/bash

#chkconfig:35 95 1
#description:script to start/stop zookeeper

##############################################

start() {
        echo -n "Starting zookeeper: "
        sh {{cdh_all_app_path}}/zookeeper/bin/zkServer.sh start
        echo "zookeeper start ok."
}
stop() {
        echo -n "Shutting down zookeeper: "
        sh {{cdh_all_app_path}}/zookeeper/bin/zkServer.sh stop
        echo "zookeeper stop ok."
}

# See how we were called
sleep 10;

case "$1" in
  start)
        start
        ;;
  stop)
        stop
        ;;
  restart)
        stop
        sleep 10
        start
        ;;
  *)
        echo "Usage: $0 {start|stop|restart}"
esac

exit 0