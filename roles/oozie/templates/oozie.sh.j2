#!/bin/bash

#chkconfig:35 95 1
#description:script to start/stop oozie

##############################################

start() {
        echo -n "Starting oozie: "
        {{cdh_all_app_path}}/oozie/bin/oozied.sh start
        echo "oozie start ok."
}
stop() {
        echo -n "Shutting down oozie: "
        {{cdh_all_app_path}}/oozie/bin/oozied.sh stop
        echo "oozie stop ok."
}

# See how we were called

case "$1" in
  start)
        start
        ;;
  stop)
        stop
        ;;
  restart)
        stop
        sleep 10
        start
        ;;
  *)
        echo "Usage: $0 {start|stop|restart}"
esac

exit 0